# Environment Toggle
# Set to 'true' to enable Firebase Authentication and Firestore Persistence
# Set to 'false' to use LocalStorage and skip login (Dev Mode)
VITE_USE_FIREBASE=false

# Firebase Configuration (Production)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Gemini AI Configuration
# In standard Vite environments, variables MUST be prefixed with VITE_ to be visible in the browser.
VITE_GOOGLE_API_KEY=your_google_gemini_api_key

# Fallback for environments that inject process.env.API_KEY directly
API_KEY=your_google_gemini_api_key